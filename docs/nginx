server {
    listen       80;
    server_name  smartfact.local;

    location / {
        root   C:\Users\Alban\Desktop\Dev\www\SmartFact\public;
        try_files $uri $uri/ @nodejs_ostm;
        expires 1d;
        access_log off;
    }

    location @nodejs_ostm {
        proxy_pass http://localhost:10001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    location ~ /\. {
        deny all;
    }

    location ~* \.(log|sql|env|git|svn|htaccess|htpasswd|ini|conf|sh|swp|gitignore|gitkeep)$ {
        deny all;
    }
}